<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contacts_item_h"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/infor_item_plr"
        android:paddingRight="@dimen/infor_item_plr">

        <com.mingbang.mingbang.mingbang.view.RoundImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/contacts_item_avatar_hw"
            android:layout_height="@dimen/contacts_item_avatar_hw"
            android:layout_centerVertical="true"
            android:src="@mipmap/logo" />

        <!--名字-->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/infor_item_plr"
            android:layout_toRightOf="@+id/avatar"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray" />

</RelativeLayout>

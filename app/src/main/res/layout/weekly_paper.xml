<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!--图标-->
    <LinearLayout
        android:layout_width="@dimen/work_item_logo_hw"
        android:layout_height="@dimen/work_item_logo_hw"
        android:background="@drawable/work_item_logo_cyanine"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weekly" />

    </LinearLayout>

    <!--子标题-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/work_item_sub_title_mt"
        android:text="@string/weekly"
        android:textSize="@dimen/work_item_sub_title_txt_s" />

</LinearLayout>
